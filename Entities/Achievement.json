{
  "name": "Achievement",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Achievement title"
    },
    "description": {
      "type": "string",
      "description": "Achievement description"
    },
    "icon": {
      "type": "string",
      "description": "Icon name or emoji"
    },
    "unlock_date": {
      "type": "string",
      "format": "date",
      "description": "Date achievement was unlocked"
    },
    "condition": {
      "type": "string",
      "description": "Condition to unlock (e.g., '10_workouts')"
    }
  },
  "required": [
    "title",
    "description",
    "unlock_date"
  ]
}